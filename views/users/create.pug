extends ../layout.pug

block title
  title Create New User

block body
  #form
    #newPhoto
      h3 Create New User
    #formSection
      form(method='post' action='create')
        p.field Username
        input(type='text' name='username')
        p.field Password
        input(type='password' name='password')
        p.field Confirm Password
        input(type='password' name='confirmPassword')
        br
        br
        button(type="submit")#send Enter
        br
        br